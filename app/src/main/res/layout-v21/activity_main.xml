<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DB6AC"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiee"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/splash" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottiee"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/assa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="gone"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/latobold"
            android:text="Assalomu alaykum!"
            android:textColor="#fff"
            android:textSize="34sp" />


        <TextView
            android:id="@+id/kelin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="gone"
            android:fontFamily="@font/latobold"
            android:text="Keling"
            android:textColor="#fff"
            android:textSize="32sp"
            android:translationX="25dp" />


        <TextView
            android:id="@+id/tanish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="25dp"
            android:visibility="gone"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/latobold"
            android:text="Tanishamiz :)"
            android:textColor="#fff"
            android:textSize="30sp" />


    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:background="@drawable/bgui"
        android:elevation="7dp"
        android:fontFamily="@font/latobold"
        android:gravity="center"
        android:hint="Ismingiz:"

        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/next1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="100dp"
        android:background="@drawable/bgbtn"
        android:drawableRight="@drawable/ic_baseline_navigate_next_24"
        android:elevation="5dp"
        android:fontFamily="@font/latobold"
        android:gravity="center"
        android:text="Keyingi"

        android:textAllCaps="false"
        android:textColor="@color/purple_500"
        android:visibility="gone"
        android:textSize="18sp"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/next1"
        app:layout_constraintEnd_toEndOf="@+id/next1"
        app:layout_constraintStart_toStartOf="@+id/next1"
        app:layout_constraintTop_toTopOf="@+id/next1" />


</androidx.constraintlayout.widget.ConstraintLayout>